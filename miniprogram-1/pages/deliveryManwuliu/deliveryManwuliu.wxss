.containerBox{
  display: flex;
  flex-direction:column;
  margin: 0 auto;
  width: 710rpx;
  height: 250rpx;
  border: 3rpx solid #c2bfbb;
  border-radius: 20rpx;
  box-shadow: 10rpx 10rpx 15rpx rgba(0, 0, 0, 0.15);
  background-color: #fff;
  margin-bottom: 15rpx;
  margin-top: 15rpx;
}
.containerBox-id{
  width: 100%;
  font-size: small;
  height: 30rpx;
  margin-top: 5rpx;
  margin-left: 15rpx;
  margin-bottom: 5rpx;
}
.containerBox-info{
  display: flex;
  flex-direction:row;
  margin-top: 15rpx;
  margin-right: 25rpx;
}
.containerBox-info-img{
  margin-top: 5rpx;
  margin-left: 15rpx;
  width: 60rpx;
  height: 45rpx;
}
.containerBox-info-right{
  margin-top: 5rpx;
  margin-right: 15rpx;
  width: 70rpx;
  height: 60rpx;
}
.containerBox-info-name{
  margin-left: 15rpx;
}
.containerBox-info-name-state{
  justify-content: center;
}
.containerBox-info-name-place{
  width: 120rpx;
  font-size:larger;
  text-align: center;
}
.containerBox-info-name-name2{
  width: 120rpx;
  margin-top: 15rpx;
}
.containerBox-info-name-arrow{
  width: 240rpx;
  height: 75rpx;
}


.courier{
  display: flex;
  flex-direction: row;
  margin: 0 auto;
  width: 710rpx;
  background-color: #fff;
  margin-bottom: 15rpx;
}
.courier-P1{
  display: flex;
  align-items: center;
  font-size: large;
  height: 60rpx;
  margin-right: 80rpx;
}
.courier-png{
  display: flex;
  align-items: center;
  height: 45rpx;
  width: 45rpx;
  margin-top: 10rpx;
  margin-left: 35rpx;
}
.header{
  display: flex;
  align-items: center;
  width: 100%;
  height: 238rpx;
  background-color: #5281a7;
}
.search{
  position: relative;
  width: 582rpx;
  height: 72rpx;
  background-color: #fff;
  border-radius: 8rpx;
  margin: 0 auto;
  padding-left: 44rpx;
  font-size: 24rpx;
  color: #999999;
}
.search-icon{
  position: absolute;
  z-index: 120;
  width:30rpx;
  height: 30rpx;
  background-color: #fff;
  left: 50%;
  transform: translateX(250rpx);
}
.hint{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 224rpx;
}
.hint-img{
  width: 332rpx;
  height: 332rpx;
}
.hint-text{
  font-size: 24rpx;
  color: #999999;
  margin-top: 40rpx;
}