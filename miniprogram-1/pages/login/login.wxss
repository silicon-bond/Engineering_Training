/**index.wxss**/

page {
  height: 100%;
  opacity: 0.9;
}

.container {
  border: 1rpx dolid #aaa;
  background-color: #f5f5f5;
}



.userinfoBox {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.userinfoBox-motto{
  height: 25%;
}
.userinfoBox-motto-text{
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
  font-size: 42rpx;
  display: block;
  color: #ada6a6;
  margin-bottom: 30rpx;
  text-align: center;
}

.userinfoBox-email{
  display: flex;
  flex-direction: row;
  height: 25%;
}
.userinfoBox-email-png{
  width: 75rpx;
  height: 75rpx;
}
.userinfoBox-email-input{
  border: 1px solid #aaa;
  width: 75%;
  margin-left: 15rpx;
  margin-bottom: 45rpx;
  border-radius: 15rpx;
}

.userinfoBox-button{
  width: 180rpx;
  height: 17%;
}




.loginbox {
  height: 500rpx;
  width: 650rpx;
  background-color: #fff;
  padding: 10rpx 10rpx;
  border: 1px solid #aaa;
  border-radius: 15rpx;
}
